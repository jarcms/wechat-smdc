/* pages/index/index.wxss */
@import "../../styles/theme.wxss";

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 顶部状态栏 */
.status-bar {
  background-color: var(--primary-color);
  color: white;
  padding: 20rpx 30rpx;
}

.scan-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.scan-status.scanned {
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.table-info {
  font-weight: bold;
  margin-right: 20rpx;
}

.table-name {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 340rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 操作区域 */
.action-area {
  padding: 30rpx;
}

/* 桌位扫描区 */
.scan-area {
  background-color: var(--bg-card);
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scan-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: var(--text-primary);
}

.scan-desc {
  font-size: 26rpx;
  color: var(--text-hint);
  margin-bottom: 30rpx;
}

.scan-btn {
  background-color: var(--primary-color);
  color: white;
  border-radius: 40rpx;
  padding: 0 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-btn .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.scan-btn image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.entry-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--bg-card);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.entry-icon image {
  width: 60rpx;
  height: 60rpx;
}

.entry-item text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 推荐菜品 */
.recommend {
  padding: 0 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-primary);
}

.recommend-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.recommend-item {
  width: calc(33.33% - 20rpx);
  margin: 0 10rpx 20rpx;
  background-color: var(--bg-card);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.recommend-img {
  width: 100%;
  height: 180rpx;
  display: block;
}

.recommend-info {
  padding: 10rpx;
}

.recommend-name {
  font-size: 26rpx;
  color: var(--text-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 5rpx;
}

.recommend-price {
  font-size: 26rpx;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  color: var(--text-hint);
  font-size: 24rpx;
}